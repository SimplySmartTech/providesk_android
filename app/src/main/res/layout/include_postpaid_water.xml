<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_layout_postpaid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bw_color_white"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".40"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/layoutTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/circle_two_margin_start"
            android:layout_toEndOf="@+id/layoutThree">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="@dimen/circle_two"
                android:layout_height="@dimen/circle_two"
                android:src="@drawable/circle_gradient_two" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img2"
                android:layout_alignEnd="@+id/img2"
                android:layout_alignStart="@+id/img2"
                android:layout_alignTop="@+id/img2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/unitConsumedIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/icon_water"
                    android:textColor="@color/bw_color_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unitConsumedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Water Consumed"
                    android:textColor="@color/bw_color_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unitConsumedValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/bw_color_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/img3"
                android:layout_width="@dimen/circle_three"
                android:layout_height="@dimen/circle_three"
                android:layout_marginTop="@dimen/circle_three_margin_top"
                android:src="@drawable/circle_gradient_three" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img3"
                android:layout_alignEnd="@+id/img3"
                android:layout_alignStart="@+id/img3"
                android:layout_alignTop="@+id/img3"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/unbilledAmountIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/icon_rupee"
                    android:textColor="@color/bw_color_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unbilledAmountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Unbilled Amount"
                    android:textColor="@color/bw_color_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/unbilledAmountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/bw_color_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/circle_one_margin_end"
            android:layout_marginTop="8dp"
            android:layout_toStartOf="@id/layoutThree">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="@dimen/circle_one"
                android:layout_height="@dimen/circle_one"
                android:src="@drawable/circle_gradient_one" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img1"
                android:layout_alignEnd="@+id/img1"
                android:layout_alignStart="@+id/img1"
                android:layout_alignTop="@+id/img1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/currentReadingIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="@string/icon_water"
                    android:textColor="@color/bw_color_white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/currentReadingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Current Reading"
                    android:textColor="@color/bw_color_white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/currentReadingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/bw_color_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6">

        <TextView
            android:id="@+id/daysLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/daysLeftLabel"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/bw_color_black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/daysLeftLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/graphLayoutPostpaid"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/daysLeft"
            android:layout_marginStart="10dp"
            android:text="Till next bill cycle"
            android:textColor="@color/bw_color_black"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/graphLayoutPostpaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_usage_graph_postpaid"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginBottom="3dp"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:src="@drawable/graph_electricity"
                android:textColor="@color/bw_color_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_usage_graph_postpaid"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="Know your usage"
                android:textColor="@color/bw_color_orange"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/separator_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/graphLayoutPostpaid"
            android:layout_marginTop="10dp"
            android:background="@color/bw_color_dark_gray" />

        <TextView
            android:id="@+id/lastBillLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator_one"
            android:background="@color/bw_color_light_gray"
            android:gravity="start"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="LAST BILL"
            android:textColor="@color/bw_color_black"
            android:textSize="12sp"
            android:textStyle="bold"
            custom:paddingEnd="10dp" />

        <RelativeLayout
            android:id="@+id/latestBillLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastBillLabel"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:paddingTop="6dp">

            <TextView
                android:id="@+id/latestBillText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:textColor="@color/bw_color_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/latestBillValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:textColor="@color/bw_color_black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/unitsUsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/latestBillLayout"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingEnd="6dp"
            android:paddingStart="6dp">

            <TextView
                android:id="@+id/latestUnitsUsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:textColor="@color/bw_color_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/noOfUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:text=""
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/lastPaymentLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unitsUsed"
            android:background="@color/bw_color_light_gray"
            android:gravity="start"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="LAST PAYMENT"
            android:textColor="@color/bw_color_black"
            android:textSize="12sp"
            android:textStyle="bold"
            custom:paddingEnd="10dp" />

        <RelativeLayout
            android:id="@+id/latestPaymentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastPaymentLabel"
            android:gravity="center_vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/lastPaymentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:textColor="@color/bw_color_black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lastPaymentValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="2dp"
                android:textColor="@color/bw_color_black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_layout_height"
            android:layout_alignParentBottom="true"
            android:background="@color/bw_color_blue">

            <TextView
                android:id="@+id/txt_postpaid_msg"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/bw_color_white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bw_footer_strip" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:src="@drawable/bw_footer_bot" />


        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>