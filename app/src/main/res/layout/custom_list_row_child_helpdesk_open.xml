<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bw_color_white_semi_trans"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/helpdesk_subject_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toRightOf="@+id/ll_left_panal"
        android:gravity="center_vertical"
        android:textColor="@color/bw_color_black"
        android:paddingStart="10dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/helpdesk_desc_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/helpdesk_subject_child"
        android:layout_toRightOf="@+id/ll_left_panal"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:maxLines="2"
        android:textColor="@color/bw_color_black"
        android:ellipsize="end"
        android:paddingBottom="10dp" />


    <LinearLayout
        android:id="@+id/ll_right_panal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/notification_time_child"
            android:layout_width="wrap_content"
            android:textColor="@color/bw_color_red"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ll_left_panal"
            android:gravity="center_vertical" />
    </LinearLayout>
</RelativeLayout>