<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_item_height" >

        <TextView
            android:id="@+id/footer_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="22sp"
            android:text="@string/icon_sign_out"
            android:textColor="@color/bw_color_black"
            android:paddingLeft="@dimen/drawer_left" />

        <TextView
            android:id="@+id/footer_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/drawer_text_with_icon"
            android:paddingRight="@dimen/drawer_right"
            android:text="Sign out"
            android:textColor="@color/bw_color_black"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>