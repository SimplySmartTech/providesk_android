<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="5dp">

    <FrameLayout
        android:id="@+id/ll_left_panal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp">

        <TextView
            android:id="@+id/notification_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/bw_color_black"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/notification_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:background="@drawable/circle_yellow"
            android:gravity="center"
            android:textColor="@color/bw_color_white" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_mid_panal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/ll_left_panal"
        android:layout_toStartOf="@+id/notification_time"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/notification_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingEnd="5dp"
            android:paddingStart="3dp"
            android:singleLine="true"
            android:textColor="@color/bw_color_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notification_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:singleLine="true"
            android:textColor="@color/bw_color_black"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:paddingEnd="5dp"
        android:layout_marginTop="5dp"
        android:paddingStart="5dp"
        android:textColor="@color/bw_color_black"
        android:textSize="10sp" />


</RelativeLayout>