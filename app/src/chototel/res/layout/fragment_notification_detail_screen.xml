<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bw_color_white">

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bw_color_red"
        android:gravity="center_vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="@string/txt_notification"
            android:textColor="@color/bw_color_white"
            android:textSize="20sp" />

        <FrameLayout
            android:id="@+id/ll_header_panal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/txt_notification"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notification_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="@color/bw_color_white"
                android:textSize="40sp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end"
                android:background="@drawable/circle_white"
                android:gravity="center"
                android:text="3" />
        </FrameLayout>

    </RelativeLayout>


    <TextView
        android:id="@+id/notification_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_layout"
        android:gravity="start"
        android:padding="10dp"
        android:textColor="@color/bw_color_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notification_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notification_subject"
        android:gravity="start"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/bw_color_black"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/more_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/brandingLayout"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/txt_more_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/logo_more_detail"
            android:gravity="start"
            android:paddingTop="10dp"
            android:text="@string/click_here_for_more_detail"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/logo_more_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="start"
            android:padding="10dp"
            android:textColor="@color/bw_color_yellow"
            android:textSize="45sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/brandingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <include
            layout="@layout/include_branding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
