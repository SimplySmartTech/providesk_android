<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bw_color_white"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp">

        <FrameLayout
            android:id="@+id/ll_battery"
            android:layout_width="115dp"
            android:layout_height="200dp"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/ll_water_flow"
                android:layout_width="110dp"
                android:layout_height="175dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.simplysmart.app.custom.ProgressBarView
                    android:id="@+id/bar1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bw_color_blue"
                    custom:bar_color1="@color/bw_color_blue"
                    custom:bar_color2="@color/bw_color_white"
                    custom:bar_initial_value="0"
                    custom:bar_num_divisions="11"
                    custom:bar_orientation="1"
                    custom:bar_spacing="0dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_flask"
                android:layout_width="110dp"
                android:layout_height="200dp"
                android:background="@drawable/flask"
                android:orientation="horizontal"
                android:padding="9dp" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_balance_side"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/ll_battery"
            android:layout_alignTop="@+id/ll_battery"
            android:layout_toEndOf="@+id/ll_battery"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/consumptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/readingText"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".5"
                        android:gravity="start|center_vertical"
                        android:text="Consumption"
                        android:textColor="@color/bw_color_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/readingValue"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".5"
                        android:background="@drawable/rectangular_fill_chototel_bg_color"
                        android:gravity="start|center_vertical"
                        android:paddingStart="5dp"
                        android:text="0 Ltr"
                        android:textColor="@color/bw_color_white"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/balanceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/consumptionLayout"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txt_balance"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".5"
                        android:gravity="start|center_vertical"
                        android:text="Charges"
                        android:textColor="@color/bw_color_black"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll_balance"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".5"
                        android:background="@drawable/rectangular_fill_chototel_bg_color"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/icon_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:text="@string/Rs"
                            android:textColor="@color/bw_color_white"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/val_balance"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="0"
                            android:textColor="@color/bw_color_white"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/daysLeftLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/balanceLayout"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txt_days_left"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".5"
                        android:gravity="start|center_vertical"
                        android:text="Days Left"
                        android:textColor="@color/bw_color_black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/val_days_left"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight=".5"
                        android:background="@drawable/rectangular_fill_chototel_bg_color"
                        android:gravity="start|center_vertical"
                        android:paddingStart="5dp"
                        android:text="0"
                        android:textColor="@color/bw_color_white"
                        android:textSize="20sp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top">

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_color"
            android:visibility="visible">

            <TextView
                android:id="@+id/messagePrepaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="@string/txt_notification_electricity"
                android:textColor="@color/bw_color_white"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/strip"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bw_footer_strip" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/app_logo_main" />

            <LinearLayout
                android:id="@+id/brandingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="-4dp"
                android:gravity="center"
                android:orientation="vertical">

                <include
                    layout="@layout/include_branding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>


